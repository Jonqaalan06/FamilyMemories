@model FamilyMemories.Models.FamilyMemberImageViewModel
@{
}

<h1>Upload Image</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Image.ShortDescription" class="control-label"></label>
                <input asp-for="Image.ShortDescription" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Image.ImageFile" class="control-label"></label>
                <input asp-for="Image.ImageFile" accept="image/*" />
            </div>
            <br />
            <label class="control-label">Select All People in the Picture</label>
            <select class="form-select form-select-sm" multiple aria-label=".form-select-sm example" asp-for="FamMembers" asp-items="@Model.FamMembers">
  
                
              @*@foreach(var FamilyMember in Model.FamMembers)
                {
                    <option value="@FamilyMember.Id">@FamilyMember.FirstName, @FamilyMember.LastName</option>
                }*@
            </select>
            <button type="submit" class="btn btn-primary">Upload Image</button>
        </form>
    </div>
</div>


